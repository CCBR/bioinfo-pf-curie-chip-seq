Bootstrap: docker
From: conda/miniconda3-centos7

%labels
    gitUrl ssh://git@gitlab.curie.fr:2222/data-analysis/chip-seq.git
    gitCommit 201185c7f380bcdc31f6d4b3cd44f7086fcd238a / devel

%environment
    PATH=/usr/local/envs/star_2.7.6a/bin:$PATH
    LC_ALL=en_US.utf-8
    LANG=en_US.utf-8

# real path from baseDir: star.yml
%files
    star.yml /opt/star.yml

%post
    yum install -y which   \
    && yum clean all \
    && conda env create -f /opt/star.yml \
    && echo "source activate star_2.7.6a" > ~/.bashrc \
    && conda clean -a

