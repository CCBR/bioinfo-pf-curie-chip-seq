/*
 * -------------------------------------------------
 *  Nextflow config file for tools options
 * -------------------------------------------------
 * Defines parameters for tools
 */

/*
 * Default config - works for most of reference genome
 */

params {
  
  // STAR
  star_opts = "-outFilterMultimapNmax 20 --outFilterMismatchNmax 999 --outFilterMismatchNoverLmax 0.04 --outSAMprimaryFlag OneBestScore --outMultimapperOrder Random --outSAMattributes All"
  star_opts_counts = "--quantMode GeneCounts"
  
  // samtools
  //sort_max_memory = "900M"
}


/*
 * Custom options for different genomes
 */

params{
   genomes{

      'hg19'{
         star_opts = "--outFilterType BySJout --outFilterMultimapNmax 20 --alignSJoverhangMin 8 --alignSJDBoverhangMin 1 --outFilterMismatchNmax 999 --outFilterMismatchNoverLmax 0.04 --alignIntronMin 20 --alignIntronMax 1000000 --alignMatesGapMax 1000000 --outSAMprimaryFlag OneBestScore --outMultimapperOrder Random --outSAMattributes All"
      }

      'hg38'{
         star_opts = "--outFilterType BySJout --outFilterMultimapNmax 20 --alignSJoverhangMin 8 --alignSJDBoverhangMin 1 --outFilterMismatchNmax 999 --outFilterMismatchNoverLmax 0.04 --alignIntronMin 20 --alignIntronMax 1000000 --alignMatesGapMax 1000000 --outSAMprimaryFlag OneBestScore --outMultimapperOrder Random --outSAMattributes All"
      }	  
   }
}

