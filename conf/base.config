/*
 * Default for environment options
 */

params {

 // notifications
  email = false
  plaintext_email = false

  // cluster
  queue = null

  // default path
  summaryDir = "${params.outdir}/summary"
  outdir = './results'

  // genome annotations
  genomeAnnotationPath = ""

  // Limit max resources
  //maxCpus = 2
  //maxMemory = 16.GB
  //maxTime = 48.h

  // conda
  condaCacheDir = "$HOME/conda-cache-nextflow"

  // Singularity image path
  singularityImagePath = ""
  singularityRunOptions = ""

  // Docker
  dockerRunOptions = ""

  // Global path used for path or multipath profiles
  globalPath = ""
}
