      starIndex = "${params.genomes_base}/Human/hg19/indexes/STAR"
      bwaIndex = "${params.genomes_base}/Human/hg19/indexes/bwa/hg19"
      bowtie2Index = "${params.genomes_base}/Human/hg19/indexes/bowtie2/hg19"
